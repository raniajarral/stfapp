<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:elevation="10dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <!-- Existing button for reports -->
    <ImageButton
        android:id="@+id/nav_button"
        android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_gravity="start"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:contentDescription="Profit Calculation"
    android:src="@drawable/baseline_calculate_24"
    android:padding="8dp"
    android:scaleType="fitCenter" />

    <!-- Add the logo as an ImageView -->
    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:contentDescription="App Logo"
    android:src="@mipmap/ic_launcher_foreground"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:scaleType="fitCenter" />

    <!-- New button for wisdom -->
    <ImageButton
        android:id="@+id/wisdom_button"
        android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_gravity="end"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:contentDescription="Wisdom"
    android:src="@drawable/baseline_insert_drive_file_24"
    android:padding="8dp"
    android:scaleType="fitCenter" />

</androidx.appcompat.widget.Toolbar>
